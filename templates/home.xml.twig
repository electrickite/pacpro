<?xml version="1.0" encoding="UTF-8"?>
<home>
  <packages>{{ provider.totalPackages }}</packages>
  <downloads></downloads>
  {% for package in provider.popularPackages %}
    <topdownloaded>
      <id>{{ package.id }}</id>
      <name>{{ package.name }}</name>
      <downloads></downloads>
    </topdownloaded>
  {% endfor %}
  {% for package in provider.newestPackages %}
    <newest>
      <id>{{ package.id }}</id>
      <name>{{ package.name }} {{ package.current }}</name>
      <package_name>{{ package.name }}</package_name>
      <releasedon>{{ package.transportPackageModTime }}</releasedon>
    </newest>
  {% endfor %}
  <url>{{ base_url }}{{ path_for('package') }}</url>
</home>
